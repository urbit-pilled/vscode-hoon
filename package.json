{
  "name": "hoon-highlighter",
  "displayName": "Hoon-highlighter",
  "description": "Hoon highlighter using tree-sitter",
  "repository": "https://github.com/urbit-pilled/vscode-hoon",
  "publisher": "urbit-pilled",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "browser": "./dist/web/extension.js",
  "activationEvents": [
    "onLanguage:hoon"
  ],
  "scripts": {
    "test": "vscode-test-web --extensionDevelopmentPath=. --open-devtools .",
    "compile": "tsc -p ./",
    "package": "tsc -p ./ && npx vsce package",
    "compile-web": "webpack",
    "package-web": "webpack --mode production --devtool hidden-source-map"
  },
  "contributes": {
    "languages": [
      {
        "id": "hoon",
        "aliases": [
          "Hoon",
          "hoon"
        ],
        "extensions": [
          ".hoon"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hoon",
        "scopeName": "source.hoon",
        "path": "./syntaxes/hoon.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "jsonc-parser": "^2.2.1",
    "web-tree-sitter": "0.20.8"
  },
  "devDependencies": {
    "@types/node": "^13.7.2",
    "@types/vscode": "^1.78.0",
    "@vscode/test-web": "^0.0.43",
    "assert": "^2.0.0",
    "constants-browserify": "^1.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "file-loader": "^6.2.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.4.2",
    "tslint": "^6.1.2",
    "typescript": "^5.1.3",
    "util": "^0.12.5",
    "vsce": "^2.15.0",
    "wasm-loader": "^1.3.0",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "configuration": {
    "title": "{Syntax Highlighter} configuration",
    "properties": {
      "syntax.highlightComment": {
        "description": "Enable highlighting of comments",
        "type": "boolean",
        "default": true
      },
      "syntax.highlightLanguages": {
        "description": "Enabled languages",
        "type": "array",
        "default": [
          "hoon"
        ]
      },
      "syntax.highlightTerms": {
        "description": "Enabled terms",
        "type": "array",
        "default": [
          "type",
          "scope",
          "function",
          "variable",
          "number",
          "string",
          "comment",
          "constant",
          "directive",
          "control",
          "operator",
          "modifier",
          "punctuation"
        ]
      },
      "syntax.debugHover": {
        "description": "Show tool-tip with syntax scope on hover",
        "type": "boolean",
        "default": false
      },
      "syntax.debugDepth": {
        "description": "Depth of syntax scope in debug tools",
        "type": "integer",
        "default": -1
      }
    }
  }
}
